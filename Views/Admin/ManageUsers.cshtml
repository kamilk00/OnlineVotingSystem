@model List<OnlineVotingSystem.Models.User>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Manage Users</h1>
<div class="d-flex justify-content-between align-items-center mb-3">

    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mb-3">Back to Main Page</a>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }

</div>

<div class="table-responsive">

    <table class="table table-bordered">

        <thead>
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var user in Model)
            {

                <tr>
                    <td>@user.Username</td>
                    <td>@user.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", new { id = user._id }, new { @class = "btn btn-primary btn-sm mr-2" })
                        <form method="post" action="@Url.Action("DeleteUser", "Admin", new { id = user._id })" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <input type="hidden" name="_method" value="POST" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>

            }

        </tbody>

    </table>

</div>